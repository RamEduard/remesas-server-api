{
  "name": "remesas-server-api",
  "version": "1.0.3",
  "description": "Remesas Server API (REST & Apollo GraphQL)",
  "scripts": {
    "copy:env-dev": "cp .env.development .env",
    "start:dev": "nodemon dist/server.js --unhandled-rejections=strict",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\"",
    "copy:env-prod": "cp .env.production .env",
    "build:prod": "npm run copy:env-prod && tsc -b .",
    "start": "node dist/server.js",
    "version": "node version.js && git add package.json"
  },
  "keywords": [
    "api",
    "rest",
    "graphql"
  ],
  "author": "Ramon Serrano <ramon.calle.88@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "^0.20.6",
    "apollo-datasource-mongodb": "^0.2.8",
    "apollo-server": "^2.19.0",
    "apollo-server-express": "^2.19.0",
    "app-root-dir": "^1.0.2",
    "axios": "^0.21.0",
    "axios-es6-class": "^4.2.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.15",
    "node-cron": "^2.0.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "querystring": "^0.2.0",
    "tedis": "^0.1.12"
  },
  "devDependencies": {
    "@types/app-root-dir": "^0.1.0",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/lodash": "^4.14.165",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^14.14.8",
    "@types/node-cron": "^2.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.5",
    "concurrently": "^5.3.0",
    "nodemon": "^1.19.4",
    "typescript": "^4.1.2"
  }
}
